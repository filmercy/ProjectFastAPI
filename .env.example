# Application Configuration
APP_NAME=Tennis Shop Management System
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Database Configuration
# SQLite for development (file-based, no setup needed)
DATABASE_URL=sqlite+aiosqlite:///./tennis_shop.db

# PostgreSQL for production (uncomment and configure when ready)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/tennis_shop_db

# Security Configuration
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours (full work day)
REFRESH_TOKEN_EXPIRE_DAYS=30

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=app/static/uploads

# CORS Configuration (for frontend application)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@tennisshop.com

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Business Settings
LOW_STOCK_THRESHOLD=5
DEFAULT_CURRENCY=EUR
TIMEZONE=Europe/Rome
